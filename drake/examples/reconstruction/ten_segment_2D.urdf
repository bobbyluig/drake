<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="Ten Segment 2D">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.2" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
  </link>

  <link name="link_1">
    <inertial>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1.1" radius="0.05" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>

  <link name="link_2">
    <inertial>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2.1" radius=".05" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="link_3">
    <inertial>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.33" iyz="0" izz="1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2.1" radius=".05" />
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1" />
      </material>
    </visual>
  </link>

  <joint name="joint_1" type="continuous">
    <parent link="base_link" />
    <child link="link_1" />
    <origin xyz="0 0.15 0" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <joint name="joint_2" type="continuous">
    <parent link="link_1" />
    <child link="link_2" />
    <origin xyz="0 0.1 -1" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <joint name="joint_3" type="continuous">
    <parent link="link_2" />
    <child link="link_3" />
    <origin xyz="0 0.1 -2" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

</robot>
