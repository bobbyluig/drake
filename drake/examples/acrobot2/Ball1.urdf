<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd"
       name="Ball">

  <link name="ball">
    <visual>
      <origin xyz="0.4 0.15 -0.5" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 0.3" />
      </material>
    </visual>
    <collision name="ball_collision">
      <origin xyz="0.4 0.15 -0.5" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
  </link>

</robot>